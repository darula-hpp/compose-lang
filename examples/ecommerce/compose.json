{
    "name": "ecommerce-with-reference",
    "version": "1.0.0",
    "llm": {
        "provider": "gemini",
        "model": "gemini-2.5-flash",
        "apiKey": "${GEMINI_API_KEY}",
        "temperature": 0.2,
        "maxTokens": 40000
    },
    "targets": {
        "web": {
            "entry": "./app.compose",
            "language": "typescript",
            "output": "./generated/web",
            "framework": "nextjs",
            "dependencies": [
                "date-fns", "next-themes", "tailwindcss"
            ],
            "extraRules": [
                "Use the latest version of nextjs and react",
                "use nextjs app directory for the frontend",
                "Use Tailwind CSS for styling",
                "Add hover effects to interactive elements",
                "Implement dark mode support",
                "add dependencies autoprefixer and postcss",
                "Add all the other required dependencies to the package.json"
            ]
        }
    }
}