{
    "name": "projectflow",
    "version": "1.0.0",
    "architecture": {
        "pattern": "clean-architecture",
        "principles": [
            "domain-driven-design",
            "repository-pattern",
            "event-driven"
        ],
        "features": {
            "cqrs": true,
            "eventSourcing": [
                "activity-logs"
            ],
            "rateLimiting": true,
            "caching": true
        }
    },
    "infrastructure": {
        "database": {
            "provider": "postgresql",
            "version": "16"
        },
        "cache": {
            "provider": "redis",
            "version": "7"
        },
        "search": {
            "provider": "elasticsearch",
            "version": "8"
        },
        "storage": {
            "provider": "s3"
        },
        "queue": {
            "provider": "bull",
            "queues": [
                "email",
                "notifications",
                "analytics"
            ]
        },
        "realtime": {
            "provider": "socket.io"
        }
    },
    "security": {
        "authentication": "jwt",
        "authorization": "rbac",
        "csrf": true,
        "xss": true,
        "rateLimiting": {
            "windowMs": 900000,
            "maxRequests": 100
        }
    },
    "targets": {
        "web": {
            "framework": "nextjs",
            "version": "15",
            "language": "typescript",
            "styling": "tailwindcss",
            "stateManagement": "zustand",
            "api": "graphql",
            "features": {
                "ssr": true,
                "isr": true,
                "pwa": true
            },
            "output": "./generated/web"
        },
        "api": {
            "framework": "nestjs",
            "version": "10",
            "language": "typescript",
            "api": [
                "graphql",
                "rest"
            ],
            "auth": "passport-jwt",
            "orm": "prisma",
            "features": {
                "swagger": true,
                "backgroundJobs": true,
                "monitoring": "sentry"
            },
            "output": "./generated/api"
        },
        "mobile": {
            "framework": "react-native",
            "platform": "expo",
            "language": "typescript",
            "features": {
                "offline": true,
                "pushNotifications": true,
                "biometricAuth": true
            },
            "output": "./generated/mobile"
        }
    },
    "llm": {
        "provider": "gemini",
        "model": "gemini-2.5-flash",
        "apiKey": "${GEMINI_API_KEY}",
        "temperature": 0.2,
        "maxTokens": 16384
    }
}