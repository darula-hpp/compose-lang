{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "checkJs": true,
        "allowJs": true,
        "noEmit": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "compiler/**/*.js",
        "cli/**/*.js",
        "runtime/**/*.js",
        "stdlib/**/*.js",
        "tests/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}